{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": false,
    "allowJs": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ],
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/out-tsc",
    "paths": {
      "@ws/app": [
        "project/ws/app"
      ],
      "@ws/app/*": [
        "project/ws/app/*"
      ],
      "@ws/author": [
        "project/ws/author"
      ],
      "@ws/author/*": [
        "project/ws/author/*"
      ],
      "@ws/viewer": [
        "project/ws/viewer"
      ],
      "@ws/viewer/*": [
        "project/ws/viewer/*"
      ],
      "@ws/learning-hub": [
        "project/ws/learning-hub"
      ],
      "@ws/learning-hub/*": [
        "project/ws/learning-hub/*"
      ],
      "@sunbird-cb/collection": [
        "library/ws-widget/collection"
      ],
      "@sunbird-cb/collection/*": [
        "library/ws-widget/collection/*"
      ],
      "@sunbird-cb/resolver": [
        "library/ws-widget/resolver"
      ],
      "@sunbird-cb/resolver/*": [
        "library/ws-widget/resolver/*"
      ]
    },
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types",
      "./custom_typings"
    ],
    "plugins": [
      {
        "name": "@angular/language-service"
      },
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "configFile": "./tslint.json",
        "suppressWhileTypeErrorsPresent": false
      }
    ],
    "useDefineForClassFields": false
  }
}

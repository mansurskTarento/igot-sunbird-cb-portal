{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node", "@types/zip.js"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
  },
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": ["src/**/*.d.ts"]
}
